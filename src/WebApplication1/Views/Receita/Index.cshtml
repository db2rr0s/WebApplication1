<h2>Receitas</h2>
<p>
    <a href="#/Receita/Create" class="btn btn-primary">
        <span class="glyphicon glyphicon-edit" aria-hidden="true"></span> Nova Receita
    </a>
</p>
<div class="row">
    <div class="col-lg-12">
        <div class="row">
            <form ng-submit="search()">
                <div class="form-group">
                    <label for="nome" class="col-md-1 control-label">Filtros</label>
                    <div class="col-md-2">
                        <div class="input-group">
                            <input type="text" class="form-control" ng-model="filter.StartDate" ui-mask="99/99/9999" model-view-value="true">
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="input-group">
                            <input type="text" class="form-control" ng-model="filter.EndDate" ui-mask="99/99/9999" model-view-value="true">
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="input-group">
                            <input type="text" class="form-control" placeholder="Categoria" ng-model="filter.Category">
                        </div>
                    </div>
                    <div class="col-md-1">
                        <button type="submit" class="btn btn-primary">
                            <span class="glyphicon glyphicon-search" aria-hidden="true"></span> Filtrar
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<br />
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th></th>
            <th>Valor</th>
            <th>Categoria</th>
            <th>Data</th>
            <th>Observação</th>
        </tr>
    </thead>
    <tbody>
        <tr ng-repeat="receita in receitas">
            <td class="td-actions">
                <a href="#/Receita/Edit/{{ receita.Id }}" class="btn btn-default btn-sm">
                    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Alterar
                </a>
                <a href="#/Receita/Delete/{{ receita.Id }}" class="btn btn-danger btn-sm">
                    <span class="glyphicon glyphicon-trash" aria-hidden="true"></span> Deletar
                </a>
            </td>
            <td>{{ receita.Valor| currency }}</td>
            <td>{{ receita.Categoria }}</td>
            <td>{{ receita.Data| date }}</td>                
            <td>{{ receita.Observacao }}</td>
        </tr>
    </tbody>
</table>